@model IEnumerable<Conference.Domain.Entities.Sponsors>

@{
    ViewData["Title"] = "Index";
}

<div class="">
    <div class="container-fluid" id="about">
        <h1 class="title mv">Sponsors</h1>
    </div>
</div>

<div class="">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                @if (item.Name == "Fab Lab Iasi")
            {
                <div class="col-xs-12 col-md-2 offset-md-2 space-big space">
                    <div>
                        <img class="img-responsive img-fluid" src="~/Images/dark-fablab@2x.png" alt="Alternate Text">
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </div>
                </div>
            }
                @if (item.Name == ".Net Iasi")
                {
                <div class="col-xs-12 col-md-2 offset-md-2 space-big space">
                    <div>
                        <img class="img-responsive img-fluid" src="~/Images/dark-dotnetiasi.png" alt="Alternate Text">
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </div>
                </div>
                }
                @if (item.Name == "Microsoft")
                {
                <div class="col-xs-12 col-md-2 offset-md-2 space-big space">
                    <div>
                        <img class="img-responsive img-fluid" src="~/Images/dark-microsoft@2x.png" alt="Alternate Text">
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </div>
                </div>
                    }
                }
        </div>
    </div>
</div>
